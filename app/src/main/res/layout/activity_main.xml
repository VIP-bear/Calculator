<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0A0A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/formula_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="right|top"
        android:text=""
        android:textSize="36sp"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom|end"
        android:focusable="false"
        android:text="0"
        android:textSize="36sp"
        android:textColor="#ffffff" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:rowCount="5"
        android:columnCount="4">

        <Button
            android:id="@+id/root"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="√"
            android:background="#E9E5E5"
            android:textSize="32sp" />

        <Button
            android:id="@+id/sin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="sin"
            android:textAllCaps="false"
            android:background="#E9E5E5"
            android:textSize="32sp" />

        <Button
            android:id="@+id/cos"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="cos"
            android:textAllCaps="false"
            android:background="#E9E5E5"
            android:textSize="32sp" />

        <Button
            android:id="@+id/back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="←"
            android:background="#FF9800"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/clear"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="C"
            android:background="#E9E5E5"
            android:textSize="32sp" />

        <Button
            android:id="@+id/neg"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="+/-"
            android:background="#E9E5E5"
            android:textSize="32sp" />

        <Button
            android:id="@+id/per"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="%"
            android:background="#E9E5E5"
            android:textSize="32sp" />

        <Button
            android:id="@+id/div"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="÷"
            android:background="#FF9800"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/num_7"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="7"
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/num_8"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="8"
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/num_9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="9"
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/mul"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="x"
            android:background="#FF9800"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/num_4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="4"
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/num_5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="5"
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/num_6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="6"
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/sub"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="-"
            android:background="#FF9800"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/num_1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="1"
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/num_2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="2"
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/num_3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="3"
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/add"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="+"
            android:background="#FF9800"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/num_0"
            android:layout_height="wrap_content"
            android:layout_width="190dp"
            android:layout_margin="5dp"
            android:layout_columnSpan="2"
            android:text="0"
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/point"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:text="."
            android:background="#555555"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/result"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:background="#FF9800"
            android:textColor="#ffffff"
            android:text="="
            android:textSize="32sp" />

    </GridLayout>


</LinearLayout>